<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shape_cover1"
    tools:context=".ContactsAdd">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/gold_border"
                android:backgroundTint="@color/beige">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Contact"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/add_firstname"
                    android:background="@drawable/beige_background"
                    android:layout_marginTop="40dp"
                    android:padding="8dp"
                    android:hint="First Name"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/blue_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/add_lastname"
                    android:background="@drawable/beige_background"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Last Name"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/blue_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/add_phone"
                    android:background="@drawable/beige_background"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Phone Number"
                    android:drawableLeft="@drawable/baseline_phone_iphone_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/blue_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/add_email"
                    android:background="@drawable/beige_background"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Email"
                    android:drawableLeft="@drawable/baseline_mail_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/blue_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/add_profession"
                    android:background="@drawable/beige_background"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Profession"
                    android:drawableLeft="@drawable/baseline_home_repair_service_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/blue_grey"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add"
                    android:id="@+id/add_contact_button"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/gold"
                    app:cornerRadius = "20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>